<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"

    android:background="@color/black"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <RelativeLayout
                android:id="@+id/Rr_cart_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/img_addCart_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_logo_two" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_addCart_1"
                    android:paddingLeft="4dp">

                    <TextView
                        android:id="@+id/txt_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4Sale 4 sale Knet Refrence Id"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_title_1"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:text="485454514541454651"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/txt_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_description_1"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:text="15,000"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_poductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txt_Price"
                        android:layout_below="@+id/txt_description_1"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:text="Kd"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txt_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_poductPrice"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:text="Description:"
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/txt_quantity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txt_quantity"
                        android:layout_below="@+id/txt_poductPrice"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:text="15 Credits (Price :15.0Kd)"
                        android:textColor="@color/White" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>








