<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".UpdateProfile.UpdatedProfileActivity">

    <RelativeLayout
        android:id="@+id/RR_toolbar"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proifle"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/RR_toolbar"
        android:id="@+id/RR_login"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profileImage"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_logo_two"
                app:civ_border_color="@color/Red"/>

            <TextView
                android:layout_below="@+id/profileImage"
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="Mr. mohommad saleh"
                android:textColor="@color/White"
                android:textSize="16dp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/RR_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/LL_follow"
            android:orientation="horizontal"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="Follwers"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="Follwers"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view_follow"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/LL_follow"
            android:background="@color/Gray_one"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            >
        </View>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/view_follow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mobile_icon"
                    android:id="@+id/img_mobile"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="Mobile"
                        android:textSize="12dp" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+918305343233"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <View
                        android:layout_marginTop="5dp"
                        android:id="@+id/view_mobile"
                        android:layout_below="@+id/LL_follow"
                        android:background="@color/Gray_one"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        >
                    </View>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mobile_icon"
                    android:id="@+id/img_mail"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="Balance"
                        android:textSize="12dp" />


                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FreeAds:"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.0 KWD"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FreeAds:"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16.0KWD"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                    </RelativeLayout>


                    <View
                        android:layout_marginTop="5dp"
                        android:id="@+id/view_mail"
                        android:layout_below="@+id/LL_follow"
                        android:background="@color/Gray_one"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        >
                    </View>

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mobile_icon"
                    android:id="@+id/img_mobile"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/img_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="Mobile"
                        android:textSize="12dp" />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+918305343233"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <View
                        android:layout_marginTop="5dp"
                        android:id="@+id/view_mobile"
                        android:layout_below="@+id/LL_follow"
                        android:background="@color/Gray_one"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        >
                    </View>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>