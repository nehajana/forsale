<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupScreen.Signup_Activity">

    <RelativeLayout
        android:id="@+id/Rll_signhd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/rll_arrow"
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/imgbkarr"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:tint="@color/white"
                android:src="@drawable/back_icon_one"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_sgn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrl_vw"
        android:layout_below="@+id/Rll_signhd">
        <RelativeLayout
            android:id="@+id/Rll_first"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rll_signhd">

            <EditText
                android:id="@+id/edt_firstname"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint = "firstname"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edt_lastname"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/edt_line"
                android:layout_below="@+id/edt_firstname"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint = "lastname"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/edt_email"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/edt_lastname"
                android:hint = "Email"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/edt_password"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/edt_email"
                android:hint = "password"
                android:layout_height="50dp"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/edt_contnum"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt_password"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint = "Phone Number"
                android:layout_height="50dp"
                />
            <EditText
                android:id="@+id/edt_shippingaddress"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt_contnum"
                android:layout_width="match_parent"
                android:hint = "shipping_address"
                android:layout_height="50dp"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/edt_city"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt_shippingaddress"
                android:layout_width="match_parent"
                android:hint = "city"
                android:layout_height="50dp"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/edt_country"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt_city"
                android:layout_width="match_parent"
                android:hint = "Country"
                android:layout_height="50dp"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/edt_zipcode"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/edt_country"
                android:layout_width="match_parent"
                android:hint = "zipcode"
                android:layout_height="50dp"
                android:textCursorDrawable="@drawable/edt_line"
                android:backgroundTint="@color/colorPrimaryDark"
                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_signup"
                android:layout_width="210dp"
                android:layout_below="@+id/edt_zipcode"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:backgroundTint="@color/colorPrimary"
                android:text="Signup"
                />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
