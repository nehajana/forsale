<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvanceSearchScreen.AdvanceSearchActivity">

    <RelativeLayout
        android:id="@+id/RR_toolbar"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/RR_back"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/img_back"
                android:layout_width="25dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                android:tint="@color/colorPrimary" />

        </RelativeLayout>

        <TextView
            android:layout_toRightOf="@+id/RR_back"
            android:id="@+id/txt_title"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Search"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/Gray_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></View>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RR_details"
        android:layout_margin="20dp"
        android:layout_below="@+id/RR_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:background="@drawable/border_color"
            android:layout_marginTop="20dp"
            android:id="@+id/ed_input_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextHint">
            <EditText
                android:id="@+id/edt_lastname"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:hint = "Search in (Automotive)"
                android:layout_height="50dp"
                android:textSize="14dp"
                />
        </android.support.design.widget.TextInputLayout>



        <TextView
            android:id="@+id/txt_basic_info"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Information"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_below="@+id/ed_input_txt"/>


        <RelativeLayout
            android:id="@+id/RR_basic_info"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LL_image"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/RR_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_bg">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/txt_one"
                        android:textStyle="bold"
                        android:tint="@color/White"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:src="@drawable/right_icon" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_bg">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:src="@drawable/right_icon" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    >

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:text="With Image Only"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/LL_image"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_bg">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:tint="@color/White"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:src="@drawable/right_icon" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_bg">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:src="@drawable/right_icon" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    >

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:text="With Video Only"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_price"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_below="@+id/RR_basic_info"/>



        <RelativeLayout
            android:id="@+id/RR_price"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_price"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:id="@+id/RR_from"
                android:layout_width="125dp"
                android:layout_height="40dp">

                <android.support.design.widget.TextInputLayout
                    android:background="@drawable/border_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/EditTextHint">
                    <EditText
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:hint = "From:0"
                        android:inputType="number"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="14dp"
                        />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:id="@+id/RR_to"
                android:layout_width="125dp"
                android:layout_height="40dp">

                <android.support.design.widget.TextInputLayout
                    android:background="@drawable/border_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/EditTextHint">
                    <EditText
                        android:layout_width="match_parent"
                        android:hint ="To"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:layout_marginBottom="5dp"
                        android:textSize="14dp"
                        />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


        </RelativeLayout>
        <View
            android:layout_below="@+id/RR_price"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/RR_details"
        android:id="@+id/RR_next"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/edit_textborder"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="16dp" />

    </RelativeLayout>


</RelativeLayout>

