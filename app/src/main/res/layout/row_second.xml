<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/img_animal_equipments"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/animal_equipments"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/rowSecondText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#ccb022"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/img_animal_equipments"
        android:backgroundTint="@color/colorAccent"
        android:textSize="16dp"/>


    <ImageView
        android:id="@+id/img_down_arrow"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/down_arrow"/>

</RelativeLayout>