<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    >

    <RelativeLayout
        android:id="@+id/RR_toolbar"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/Gray_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RR_toolbar"
        android:background="@color/light_gray">
        <RelativeLayout
            android:id="@+id/rll_signinbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp">
            <ImageView
                android:id="@+id/img_inbox"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/inboxmessage"/>
            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_inbox"
                android:layout_marginTop="10dp"
                android:text="Please login to use the chat feature"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btn_sign"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txt_login"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundbackground"
                android:backgroundTint="@color/colorPrimary"
                android:text="Login"
                android:textSize="14dp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>