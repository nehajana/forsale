<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.HomeActivity">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_above="@id/RR_bottom"
        android:background="@drawable/shadow_bottom"
        ></View>

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:id="@+id/RR_bottom"
        android:background="@color/White"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/RR_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:tint="@color/colorPrimary"
                android:id="@+id/img_home"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_icon"
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_categories"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text="Categories"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RR_offer"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/img_offer"
                android:layout_centerHorizontal="true"
                android:src="@drawable/offer_icon"
                android:tint="@color/Gray"
                android:layout_width="24dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_offer"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text="offer"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RR_PostAd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/img_postad"
                android:tint="@color/Gray"
                android:layout_centerHorizontal="true"
                android:src="@drawable/post_icon"
                android:layout_width="24dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_postadd"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text="Post ad"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_postad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RR_message"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:tint="@color/Gray"
                android:id="@+id/img_message"
                android:layout_centerHorizontal="true"
                android:src="@drawable/message_icon"
                android:layout_width="24dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/txt_message"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text="Message"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RR_more"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:tint="@color/Gray"
                android:id="@+id/img_more"
                android:layout_centerHorizontal="true"
                android:src="@drawable/more_icon"
                android:layout_width="24dp"
                android:layout_height="20dp" />


            <TextView
                android:id="@+id/txt_more"
                android:layout_marginTop="3dp"
                android:textSize="12dp"
                android:text="More"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>